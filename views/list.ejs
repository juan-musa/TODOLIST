
<%-include("header") -%>

<div class="container container-fluid ">
        
    <div class="row">
        <div class="col-4"></div>
        <div class="box  col-md-4 text-center pr-3" id="heading"> 
            
            <div class="container">
                <div class="row " style="margin-top: 75px;" >
                    <h1 class=" bg-primary-subtle rounded fw-bold pt-1 pb-1  "> <%=listTitle%> </h1> 
                </div>
            </div>
        

            <div class=" container">
                <div class="row bg-primary-subtle ">
                    <%newListitems.forEach (function (item){  %>
                        <form action="/delete" method="post" >
                            <div class="row item mt-2 mb-2  ">
                                <div class="col-2 list-group-item ">
                                <input class="form-check-input" type="checkbox" name="checkbox" value= "<%=item._id %>" onChange ="this.form.submit()"  >
                                </div>
                                <div class="col-10 list-group-item">
                                <p class="col-12 "><%= item.name %></p> 
                                </div> 
                            </div>
                                <input type="hidden" name="listName" value="<%= listTitle %>"></input>
                        </form>         
                    <% })%>
            
                        <form class="item m-2" action="/" method="post">

                            <div class="input-group mb-3 pr-3">
                                <input type="text" class="form-control" name="newItem" placeholder="New task" aria-label="Recipient's username" aria-describedby="button-addon2" autocomplete="off">
                                <button class="btn fw-bold " style="background-color: #448cff ; color: white;" type="submit" id="button-addon2" name="list" value="<%= listTitle %>">Add</button>
                            </div>
                                 
                        </form>
                </div>
            </div>
        </div>
        <div class="col-4"></div>
    </div>
     
</div> 
 
 <%-include("footer") -%>
      
